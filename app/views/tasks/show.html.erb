<div class="header">
  <div class="row">
    <div class="col-xs-6">
      <h1><%=@task.title%></h1>
    </div>
    <div class="col-xs-6 text-right">
       <%= link_to raw('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit this task'), task_edit_path(@task), class: 'btn btn-default' %>
    </div>
  </div>
</div>
<br>
<div class="alert alert-success">
  <%=@task.details%>
</div>
<br>
<div>
  <input type="checkbox" name="vehicle3" value="Boat" disabled <%= 'checked' if @task.completed %>>
  <span>This task is <%= @task.completed ? 'completed' : 'not completed yet' %> </span>
</div>
<br>
<hr>
<%= link_to raw('<span class="glyphicon glyphicon-repeat" aria-hidden="true"></span> Back to list'), tasks_path %>
